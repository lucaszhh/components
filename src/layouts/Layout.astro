---
import Typography from "../components/Typography";
import NavBar from "./NavBar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;




---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="">
		<header class="border-b-2 border-black p-4 sticky top-0 bg-white">
			<Typography tag="h4">Components</Typography>
		</header>
		<main class="flex items-start max-w-[1200px]  m-auto p-4 ">
			<NavBar />
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: "Arial", sans-serif;
	}
	body {
		width: 100%;
		height: 100vh;
		background-color: white;
		background: radial-gradient(125% 125% at 50% 10%, #fff 40%, #63e 100%);
	}
</style>
